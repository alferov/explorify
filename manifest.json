{
  "name": "Explorify",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "A Chrome extension that adds a quick overview to repositories in your Github News Feed",
  "homepage_url": "https://github.com/alferov/explorify",
  "author": "Philipp Alferov",
  "permissions": [
    "http://github.com/*",
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://github.com/*",
        "https://github.com/*"
      ],
      "js": [
        "dist/explorify.js"
      ],
      "run_at": "document_end"
    }
  ]
}
