{
  "name": "Showcasify",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Adds the description and the number of stars to starred, newly created, and forked repositories in the GitHub News Feed",
  "homepage_url": "https://github.com/alferov/showcasify",
  "author": "Philipp Alferov",
  "permissions": [
    "http://github.com/*",
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://github.com/*",
        "https://github.com/*"
      ],
      "js": [
        "dist/showcasify.js"
      ],
      "run_at": "document_end"
    }
  ]
}
