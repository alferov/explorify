{
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "allowImportExportEverywhere": false
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "fetch": true
  },
  "rules": {
    semi: ["error", "never"]
  }
}
